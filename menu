from usuarios import Usuario, Senha

lista_usuarios = []
lista_senhas = []

def cadastrar_usuario():
    print("\n=== Cadastro ===")
    nome = input("Nome: ")
    # ... (outros inputs de endereço, telefone, etc)
    email = input("Email: ")
    
    # Criamos o usuário
    novo_usuario = Usuario(nome, "Endereço Exemplo", "123", "000", email)
    
    # Criamos a senha vinculada a esse usuário
    chave = input("Defina sua senha: ")
    nova_senha = Senha(chave, novo_usuario)
    
    lista_usuarios.append(novo_usuario)
    lista_senhas.append(nova_senha)
    
    print(f"Usuário {nome} e senha cadastrados com sucesso!")

def visualizar_senhas():
    print("\n=== Senhas Cadastradas ===")
    for s in lista_senhas:
        # Aqui você acessa a chave da senha e o nome do usuário vinculado
        print(f"Usuário: {s.usuario.nome} | Senha: {s.chave}")
